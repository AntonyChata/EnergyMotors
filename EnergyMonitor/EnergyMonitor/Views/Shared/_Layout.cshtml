@{
    Layout = null;
    var title = ViewBag.Title ?? "Energy Monitor";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: #0e1525;
            color: #e9edf5;
        }

        .navbar {
            background: #0f213d;
            border-bottom: 1px solid #233154;
        }

        a {
            color: #8bd1ff;
        }

        .card {
            background: #141d33;
            border: 1px solid #223055;
        }

        .muted {
            color: #9fb0d2;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand px-3">
        <a class="navbar-brand text-light fw-bold" href="@Url.Action("Index","Dashboard")">⚡ EnergyMonitor</a>
        <div class="ms-auto">
            <a class="btn btn-sm btn-outline-light me-1" href="@Url.Action("Index","Device")">Dispositivos</a>
            <a class="btn btn-sm btn-outline-light" href="@Url.Action("Index","Alerts")">Alertas</a>
        </div>
    </nav>
    <div class="container py-3">
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
