@model IEnumerable<EnergyMonitor.Models.Device>
@{ ViewBag.Title = "Dispositivos"; Layout = "~/Views/Shared/_Layout.cshtml"; }
<div class="d-flex justify-content-between align-items-center mb-2">
    <h3 class="m-0">Dispositivos</h3>
    <a class="btn btn-sm btn-primary" href="@Url.Action("Edit","Device")">Nuevo</a>
</div>
<table class="table table-sm table-dark table-striped">
    <thead><tr><th>Nombre</th><th>Zona</th><th>Activo</th><th></th></tr></thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.Name</td>
                <td>@d.Zone</td>
                <td>@(d.IsActive?"Sí":"No")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-info" href="@Url.Action("Edit","Device", new { id=d.Id })">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" href="@Url.Action("Delete","Device", new { id=d.Id })" onclick="return confirm('¿Eliminar?');">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
